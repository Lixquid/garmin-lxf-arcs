    <setting propertyKey="@Properties.Setting_ShowDate" title="@Strings.Setting_ShowDate">
        <settingConfig type="boolean" />
    </setting>
    <setting propertyKey="@Properties.Setting_ShowBattery" title="@Strings.Setting_ShowBattery">
        <settingConfig type="boolean" />
    </setting>
